<UserControl x:Class="Eppie.App.UI.Controls.SupportDevelopmentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             MaxWidth="360"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="SupportDevelopmentSubtitleTextBlockStyle"
               BasedOn="{StaticResource SubtitleTextBlockStyle}"
               TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </UserControl.Resources>

    <Border HorizontalAlignment="Center" VerticalAlignment="Center">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Spacing="12">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0"
                          HorizontalAlignment="Left"
                          Visibility="{x:Bind IsIconVisible, Mode=OneTime}">
                        <Ellipse Width="92"
                                 Height="92"
                                 Fill="#F0F0F0" />
                        <FontIcon HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  FontSize="48"
                                  Foreground="Black"
                                  Glyph="&#xEB52;" />
                    </Grid>

                    <AppBarButton Grid.Column="1"
                                  Width="48"
                                  Height="48"
                                  VerticalAlignment="Top"
                                  Click="CloseButton_Click"
                                  Visibility="{x:Bind IsCloseButtonVisible, Mode=OneWay}">
                        <SymbolIcon Symbol="Cancel" />
                    </AppBarButton>
                </Grid>

                <TextBlock x:Uid="/Eppie.App.UI/Controls/SupportDevelopmentCaption" Style="{StaticResource SupportDevelopmentSubtitleTextBlockStyle}" />

                <StackPanel>
                    <TextBlock x:Uid="/Eppie.App.UI/Controls/SupportDevelopmentText" TextWrapping="Wrap" />
                    <TextBlock x:Uid="/Eppie.App.UI/Controls/SupportDevelopmentStoreProvider"
                               TextWrapping="Wrap"
                               Visibility="{x:Bind IsStorePaymentProcessor, Mode=OneTime}" />
                    <TextBlock x:Uid="/Eppie.App.UI/Controls/SupportDevelopmentGitHubProvider"
                               TextWrapping="Wrap"
                               Visibility="{x:Bind IsStorePaymentProcessor, Mode=OneTime, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Bottom"
                               FontSize="22"
                               FontWeight="Bold"
                               Text="{x:Bind Price, Mode=OneWay}" />
                    <TextBlock x:Uid="/Eppie.App.UI/Controls/PricePerMonthText"
                               Margin="4,0,0,0"
                               VerticalAlignment="Bottom" />
                </StackPanel>
            </StackPanel>
            <Button x:Uid="/Eppie.App.UI/Controls/SupportDevelopmentShortButton"
                    Grid.Row="1"
                    Margin="0,28,0,0"
                    HorizontalAlignment="Stretch"
                    Command="{x:Bind SupportDevelopmentCommand, Mode=OneWay}"
                    Style="{StaticResource AccentButtonStyle}" />
        </Grid>
    </Border>
</UserControl>
