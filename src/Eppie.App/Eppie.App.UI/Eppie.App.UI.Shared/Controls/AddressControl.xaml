<UserControl x:Class="Tuvi.App.Shared.Controls.AddressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:Tuvi.App.Shared.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Thickness x:Key="LineThickness">0,1</Thickness>
        <Thickness x:Key="LineMargin">0,16,0,32</Thickness>

        <Style x:Key="AddressTextBlockStyle"
               BasedOn="{StaticResource BodyTextBlockStyle}"
               TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="IsTextSelectionEnabled" Value="True" />
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <Border Margin="0,0,0,24"
                Padding="12,6"
                Background="{ThemeResource SystemFillColorCautionBackgroundBrush}"
                CornerRadius="4"
                Visibility="{x:Bind HideWarning, Converter={StaticResource InverseBoolToVisibilityConverter}, Mode=OneWay}">

            <TextBlock VerticalAlignment="Center"
                       Text="{x:Bind Warning, Mode=OneWay}"
                       TextWrapping="WrapWholeWords" />
        </Border>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Style="{StaticResource AddressTextBlockStyle}"
                       Text="{x:Bind Address, Mode=OneWay}" />
            <ContentPresenter Grid.Column="1"
                              VerticalAlignment="Center"
                              Content="{x:Bind ExtraContent, Mode=OneWay}" />
        </Grid>

        <Border Margin="{StaticResource LineMargin}"
                BorderBrush="{ThemeResource ControlStrokeColorSecondary}"
                BorderThickness="{StaticResource LineThickness}" />
    </StackPanel>
</UserControl>
