<UserControl x:Class="Eppie.App.UI.Controls.AddressSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:Eppie.App.UI.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">


    <UserControl.Resources>
        <x:Double x:Key="ButtonMinWidth">148</x:Double>
        <Thickness x:Key="VerticalViewMargin">0,24</Thickness>
        <Thickness x:Key="HorizontalViewMargin">44,0,48,0</Thickness>
        <Thickness x:Key="UIElementMargin">0,24,0,0</Thickness>

        <Style x:Key="TitleTextBlockStyle"
               BasedOn="{StaticResource BodyTextBlockStyle}"
               TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
        </Style>

        <Style x:Key="CriticalActionButtonStyle"
               BasedOn="{StaticResource DefaultButtonStyle}"
               TargetType="Button">
            <Setter Property="Foreground" Value="{ThemeResource SystemFillColorCriticalBrush}" />
        </Style>

    </UserControl.Resources>

    <Grid Padding="{StaticResource VerticalViewMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Padding="{StaticResource HorizontalViewMargin}"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Text="{x:Bind Header}" />

        <ScrollViewer Grid.Row="1"
                      Margin="{StaticResource UIElementMargin}"
                      IsEnabled="{x:Bind IsApplying, Converter={StaticResource InverseBoolConverter}, Mode=OneWay}">
            <ContentPresenter Padding="{StaticResource HorizontalViewMargin}" Content="{x:Bind SettingsContent}" />
        </ScrollViewer>

        <Grid Grid.Row="3"
              Margin="{StaticResource UIElementMargin}"
              Padding="{StaticResource HorizontalViewMargin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button MinWidth="{StaticResource ButtonMinWidth}"
                    Command="{x:Bind ApplyCommand}"
                    IsEnabled="{x:Bind IsApplyButtonEnabled, Mode=OneWay}"
                    Style="{StaticResource AccentButtonStyle}"
                    Visibility="{x:Bind JoinWaitingListCommand, Converter={StaticResource InverseObjectToVisibilityConverter}, Mode=OneWay}">
                <Grid>
                    <ProgressRing Width="18"
                                  Height="18"
                                  IsActive="True"
                                  Visibility="{x:Bind IsApplying, Mode=OneWay}" />
                    <TextBlock x:Uid="/Eppie.App.UI/Controls/ApplyButtonContent" Visibility="{x:Bind IsApplying, Converter={StaticResource InverseBoolToVisibilityConverter}, Mode=OneWay}" />
                </Grid>
            </Button>

            <Button x:Uid="/Eppie.App.UI/Controls/JoinWaitingList"
                    MinWidth="{StaticResource ButtonMinWidth}"
                    Command="{x:Bind JoinWaitingListCommand, Mode=OneWay}"
                    Style="{StaticResource AccentButtonStyle}"
                    Visibility="{x:Bind JoinWaitingListCommand, Converter={StaticResource ObjectToVisibilityConverter}, Mode=OneWay}" />

            <Button x:Uid="/Eppie.App.UI/Controls/Cancel"
                    Grid.Column="1"
                    MinWidth="{StaticResource ButtonMinWidth}"
                    Margin="8,0"
                    Command="{x:Bind CancelCommand}" />

            <Button x:Uid="/Eppie.App.UI/Controls/RemoveAddressButton"
                    Grid.Column="2"
                    MinWidth="{StaticResource ButtonMinWidth}"
                    HorizontalAlignment="Right"
                    Command="{x:Bind RemoveCommand}"
                    Style="{StaticResource CriticalActionButtonStyle}"
                    Visibility="{x:Bind IsRemoveButtonVisible, Mode=OneWay}" />
        </Grid>
    </Grid>
</UserControl>
