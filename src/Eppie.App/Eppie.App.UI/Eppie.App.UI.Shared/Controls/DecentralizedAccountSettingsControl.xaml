<UserControl x:Class="Tuvi.App.Shared.Controls.DecentralizedAccountSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:Tuvi.App.Shared.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:Tuvi.App.Shared.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <Grid>
        <ScrollViewer IsEnabled="{x:Bind IsLocked, Converter={StaticResource InverseBoolConverter}, Mode=OneWay}">
            <StackPanel Margin="0,0,20,0" Orientation="Vertical">

                <ComboBox x:Uid="/Eppie.App.UI/Controls/NetworkName"
                          Margin="0,16,0,4"
                          IsEnabled="{x:Bind AccountSettingsModel.IsNetworkLocked, Converter={StaticResource InverseBoolConverter}, Mode=OneWay}"
                          ItemsSource="{x:Bind AccountSettingsModel.NetworkOptions, Mode=OneWay}"
                          SelectedItem="{x:Bind AccountSettingsModel.SelectedNetwork, Mode=TwoWay}" />

                <Border Margin="0,16,0,4"
                        Padding="4"
                        Background="{ThemeResource SystemFillColorCautionBackgroundBrush}"
                        CornerRadius="4">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <SymbolIcon Margin="0,0,10,0" Symbol="Important" />
                        <TextBlock x:Uid="/Eppie.App.UI/Controls/WarningTestnet" TextWrapping="Wrap" />
                    </StackPanel>
                </Border>

                <TextBlock x:Uid="/Eppie.App.UI/Controls/EmailAddress" Margin="0,16,0,4" />
                <TextBox x:Name="EmailBox"
                         HorizontalAlignment="Stretch"
                         IsReadOnly="True"
                         IsSpellCheckEnabled="False"
                         Text="{x:Bind AccountSettingsModel.Email, Mode=OneWay}" />

                <TextBlock x:Uid="/Eppie.App.UI/Controls/SenderName" Margin="0,16,0,4" />
                <controls:PromptTextInputControl HorizontalAlignment="Stretch"
                                                 IsSpellCheckEnabled="False"
                                                 Text="{x:Bind AccountSettingsModel.SenderName, Mode=TwoWay}" />


                <muxc:Expander Margin="0,16,0,4"
                               HorizontalContentAlignment="Left"
                               Visibility="{x:Bind AccountSettingsModel.IsSecretKeyVisible, Mode=OneWay}">
                    <muxc:Expander.Header>

                        <TextBlock x:Uid="/Eppie.App.UI/Controls/SecretKeyWIF" Style="{StaticResource NormalTextStyle}" />

                    </muxc:Expander.Header>
                    <muxc:Expander.Content>
                        <StackPanel Orientation="Horizontal">

                            <TextBox InputScope="Password"
                                     IsReadOnly="True"
                                     IsSpellCheckEnabled="False"
                                     IsTextPredictionEnabled="False"
                                     Text="{x:Bind AccountSettingsModel.SecretKeyWIF, Mode=OneWay}" />

                        </StackPanel>

                    </muxc:Expander.Content>
                </muxc:Expander>

                <StackPanel Margin="0,16,0,4">
                    <TextBlock x:Uid="/Eppie.App.UI/Controls/CheckNewMessagesIntervalLabel" Margin="0,0,0,4" />
                    <local:ErrorControl HorizontalAlignment="Stretch" Property="{x:Bind AccountSettingsModel.SynchronizationInterval, Mode=OneWay}">
                        <local:ErrorControl.InnerContent>
                            <TextBox IsSpellCheckEnabled="False" Text="{x:Bind AccountSettingsModel.SynchronizationInterval.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </local:ErrorControl.InnerContent>
                    </local:ErrorControl>
                </StackPanel>

          </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
