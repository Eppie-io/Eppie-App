<UserControl x:Class="Eppie.App.UI.Controls.AdvancedSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:Eppie.App.UI.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <UserControl.Resources>
        <x:Double x:Key="AdvancedSettingsSelectorMinWidth">108</x:Double>
        <x:Double x:Key="ButtonMinWidth">148</x:Double>
        <x:Double x:Key="NormalOptionGapHeight">36</x:Double>
    </UserControl.Resources>

    <StackPanel>
        <local:OptionControl x:Uid="/Eppie.App.UI/Controls/AdvancedOption"
                             GapHeight="{StaticResource NormalOptionGapHeight}"
                             HideNote="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="SettingsModeSelector"
                          Grid.Column="0"
                          MinWidth="{StaticResource AdvancedSettingsSelectorMinWidth}"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          SelectionChanged="OnSelectionChanged">
                    <ComboBox.Items>
                        <ComboBoxItem x:Uid="/Eppie.App.UI/Controls/AdvancedSettingsDefaultMode" />
                        <ComboBoxItem x:Uid="/Eppie.App.UI/Controls/AdvancedSettingsCustomMode" />
                    </ComboBox.Items>
                </ComboBox>

                <Button x:Uid="/Eppie.App.UI/Controls/AdvancedSettingsResetButton"
                        Grid.Column="1"
                        MinWidth="{StaticResource ButtonMinWidth}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Command="{x:Bind ResetCommand}"
                        Visibility="{x:Bind HideResetButton, Converter={StaticResource InverseBoolToVisibilityConverter}, Mode=OneWay}" />
            </Grid>
        </local:OptionControl>

        <ContentPresenter Content="{x:Bind SettingsContent}" Visibility="{x:Bind IsAdvancedModeActive, Mode=OneWay}" />
    </StackPanel>
</UserControl>
