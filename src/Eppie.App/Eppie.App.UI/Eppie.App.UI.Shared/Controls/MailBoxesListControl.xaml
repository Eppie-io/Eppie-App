<UserControl x:Class="Eppie.App.UI.Controls.MailBoxesListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviors="using:Eppie.App.UI.Behaviors"
             xmlns:converters="using:Tuvi.App.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
             xmlns:local="using:Eppie.App.UI.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="using:Eppie.App"
             xmlns:viewmodels="using:Tuvi.App.ViewModels"
             xmlns:views="using:Eppie.App.Views"
             xmlns:winui="using:Microsoft.UI.Xaml.Controls"
             xmlns:xamarin="http://uno.ui/xamarin"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d xamarin">

    <UserControl.Resources>
        <DataTemplate x:Key="MailBoxItemTemplate" x:DataType="viewmodels:MailBoxItem">
            <winui:TreeViewItem ItemsSource="{x:Bind Children, Mode=OneWay}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Grid.ContextFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:Uid="/Eppie.App.UI/Controls/NewFolderMenuItem"
                                            Click="NewFolderMenuItemClick"
                                            Tag="{x:Bind}"
                                            Visibility="{x:Bind IsRootItem, Mode=OneWay}">
                                <MenuFlyoutItem.Icon>
                                    <SymbolIcon Symbol="Add" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Uid="/Eppie.App.UI/Controls/MailboxSettingsMenuItem"
                                            Click="MailboxSettingsMenuItemClick"
                                            Tag="{x:Bind}"
                                            Visibility="{x:Bind IsRootItem, Mode=OneWay}">
                                <MenuFlyoutItem.Icon>
                                    <SymbolIcon Symbol="Setting" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Uid="/Eppie.App.UI/Controls/RenameFolderMenuItem"
                                            Click="RenameFolderMenuItemClick"
                                            Tag="{x:Bind}"
                                            Visibility="{x:Bind IsRootItem, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                <MenuFlyoutItem.Icon>
                                    <SymbolIcon Symbol="Edit" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator />
                            <MenuFlyoutItem x:Uid="/Eppie.App.UI/Controls/RemoveMailboxMenuItem"
                                            Click="RemoveMailboxMenuItemClick"
                                            Tag="{x:Bind}"
                                            Visibility="{x:Bind IsRootItem, Mode=OneWay}">
                                <MenuFlyoutItem.Icon>
                                    <SymbolIcon Symbol="Remove" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Uid="/Eppie.App.UI/Controls/DeleteFolderMenuItem"
                                            Click="DeleteFolderMenuItemClick"
                                            Tag="{x:Bind}"
                                            Visibility="{x:Bind IsRootItem, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                <MenuFlyoutItem.Icon>
                                    <SymbolIcon Symbol="Delete" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Grid.ContextFlyout>

                    <TextBlock FontWeight="{x:Bind IsRootItem, Mode=OneWay, Converter={StaticResource BoolToFontWeightConverter}}" Text="{x:Bind Text, Mode=OneWay}" />

                    <winui:InfoBadge Grid.Column="1"
                                     Margin="8,0,4,0"
                                     HorizontalAlignment="{x:Bind IsRootItem, Mode=OneWay, Converter={StaticResource BoolToRightAlignConverter}}"
                                     Visibility="{x:Bind UnreadMessagesCount, Converter={StaticResource IntToVisibilityConverter}, Mode=OneWay}"
                                     Value="{x:Bind UnreadMessagesCount, Mode=OneWay}" />
                </Grid>
            </winui:TreeViewItem>
        </DataTemplate>

        <Style x:Key="MailBoxItemContainerStyle" TargetType="winui:TreeViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <winui:TreeView AllowDrop="True"
                        DragOver="MailBoxTreeView_DragOver"
                        Drop="MailBoxTreeView_Drop"
                        ItemContainerStyle="{StaticResource MailBoxItemContainerStyle}"
                        ItemTemplate="{StaticResource MailBoxItemTemplate}"
                        ItemsSource="{x:Bind MailBoxesModel.Items, Mode=OneWay}"
                        SelectedItem="{x:Bind MailBoxesModel.SelectedItem, Mode=TwoWay}"
                        SelectionMode="Single">
            <interactivity:Interaction.Behaviors>
                <behaviors:TreeViewItemInvokeBehavior InvokeCommand="{x:Bind MailBoxesModel.ItemClickCommand, Mode=OneWay}" />
            </interactivity:Interaction.Behaviors>
        </winui:TreeView>
    </Grid>
</UserControl>
