<UserControl x:Class="Eppie.App.UI.Controls.WhatsNewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             MaxWidth="400"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <Grid Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Spacing="24">
            <!--  Header  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Share Button  -->
                <Button Grid.Column="0">
                    <SymbolIcon Symbol="Share" />
                </Button>

                <!--  Title  -->
                <TextBlock Grid.Column="1"
                           HorizontalAlignment="Center"
                           FontSize="18"
                           Text="What's new" />

                <!--  Close Button  -->
                <Button Grid.Column="2">
                    <SymbolIcon Symbol="Cancel" />
                </Button>
            </Grid>

            <!--  Update 1  -->
            <StackPanel Spacing="8">
                <TextBlock FontSize="24"
                           FontWeight="SemiBold"
                           Text="Eppie is now in Belarusian and Japanese"
                           TextWrapping="Wrap" />
                <TextBlock FontSize="18"
                           Text="Thanks to our community, Eppie is now available in two more languages. Want your language next? Go here. To change language, open Settings."
                           TextWrapping="Wrap" />
            </StackPanel>

            <!--  Update 2  -->
            <StackPanel Spacing="8">
                <TextBlock FontSize="24"
                           FontWeight="SemiBold"
                           Text="Join the open-source build on GitHub"
                           TextWrapping="Wrap" />
                <TextBlock FontSize="18"
                           Text="Together we’re building providerless, peer-to-peer email with local AI — open-source from the first line of code. Contribute, send pull requests and see the project evolve in real time on GitHub."
                           TextWrapping="Wrap" />
            </StackPanel>
        </StackPanel>

        <!--  Version  -->
        <TextBlock Grid.Row="1"
                   Margin="0,32,0,8"
                   Text="Version 1.0.156.0" />
    </Grid>
</UserControl>
