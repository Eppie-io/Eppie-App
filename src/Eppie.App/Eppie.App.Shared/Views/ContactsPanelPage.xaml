<local:ContactsPanelPageBase x:Class="Eppie.App.Views.ContactsPanelPage"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:local="using:Eppie.App.Views"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:sharedControls="using:Eppie.App.UI.Controls"
                             xmlns:viewmodels="using:Tuvi.App.ViewModels"
                             mc:Ignorable="d">

    <local:ContactsPanelPageBase.DataContext>
        <viewmodels:ContactsPanelPageViewModel />
    </local:ContactsPanelPageBase.DataContext>

    <Grid Padding="12,0,-32,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Height="40"
                    Margin="4,4,4,8"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <SymbolIcon Margin="12,0,12,0" Symbol="Contact" />
            <TextBlock x:Uid="ContactsPanelTitle"
                       Margin="0,0,4,0"
                       VerticalAlignment="Center"
                       Style="{StaticResource PageSubtitleTextStyle}" />
        </StackPanel>

        <Grid Grid.Row="1" Margin="4,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ComboBox Grid.Row="0"
                      Margin="4,0,0,0"
                      HorizontalAlignment="Stretch"
                      ItemsSource="{x:Bind ViewModel.SortingVariants, Mode=OneWay}"
                      SelectedIndex="{x:Bind ViewModel.SelectedSortingIndex, Mode=TwoWay}" />

            <AutoSuggestBox x:Uid="ContactFilter"
                            Grid.Row="1"
                            Margin="4,4,0,0"
                            QueryIcon="Find"
                            Text="{x:Bind ViewModel.Contacts.SearchFilter.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <sharedControls:ContactsListControl Grid.Row="2"
                                                Margin="0,4,0,0"
                                                ChangeContactAvatarCommand="{x:Bind ViewModel.ChangeContactAvatarCommand, Mode=OneWay}"
                                                ClipboardProvider="{StaticResource ClipboardProvider}"
                                                ComposeEmailCommand="{x:Bind ViewModel.ComposeEmailCommand, Mode=OneWay}"
                                                ContactClickCommand="{x:Bind ViewModel.ContactClickCommand, Mode=OneWay}"
                                                Contacts="{x:Bind ViewModel.Contacts, Mode=OneWay}"
                                                CopyContactAddressCommand="{x:Bind ViewModel.CopyContactAddressCommand, Mode=OneWay}"
                                                InviteContactCommand="{x:Bind ViewModel.InviteContactCommand, Mode=OneWay}"
                                                RemoveContactCommand="{x:Bind ViewModel.RemoveContactCommand, Mode=OneWay}"
                                                RenameContactCommand="{x:Bind ViewModel.RenameContactCommand, Mode=OneWay}"
                                                SelectedContact="{x:Bind ViewModel.SelectedContact, Mode=TwoWay}" />
        </Grid>
    </Grid>
</local:ContactsPanelPageBase>
