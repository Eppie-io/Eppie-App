<local:BitcoinAddressSettingsPageBase x:Class="Tuvi.App.Shared.Views.BitcoinAddressSettingsPage"
                                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                      xmlns:behaviors="using:Eppie.App.UI.Behaviors"
                                      xmlns:controls="using:Tuvi.App.Shared.Controls"
                                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
                                      xmlns:local="using:Tuvi.App.Shared.Views"
                                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                      xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
                                      xmlns:viewmodels="using:Tuvi.App.ViewModels"
                                      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                                      mc:Ignorable="d">

    <local:BitcoinAddressSettingsPageBase.Resources>
        <x:Double x:Key="NormalOptionGapHeight">36</x:Double>
    </local:BitcoinAddressSettingsPageBase.Resources>

    <local:BitcoinAddressSettingsPageBase.DataContext>
        <viewmodels:BitcoinAddressSettingsPageViewModel />
    </local:BitcoinAddressSettingsPageBase.DataContext>

    <interactivity:Interaction.Behaviors>
        <behaviors:DialogBehavior ApplyCommand="{x:Bind ViewModel.ApplySettingsCommand}"
                                  CancelCommand="{x:Bind ViewModel.CancelSettingsCommand}"
                                  HandleErrorCommand="{x:Bind ViewModel.HandleErrorCommand}" />
    </interactivity:Interaction.Behaviors>

    <controls:AddressSettingsView x:Uid="AddressSettingsView"
                                  ApplyCommand="{x:Bind ViewModel.ApplySettingsCommand}"
                                  CancelCommand="{x:Bind ViewModel.CancelSettingsCommand}"
                                  IsApplying="{x:Bind ViewModel.IsWaitingResponse, Mode=OneWay}"
                                  IsRemoveButtonVisible="{x:Bind ViewModel.IsCreatingAccountMode, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"
                                  RemoveCommand="{x:Bind ViewModel.RemoveAccountCommand}">
        <controls:AddressSettingsView.SettingsContent>
            <StackPanel>

                <!--  ToDo: Issue #861 - Add logic  -->
                <!--  ToDo: Issue #861 - Move Warning text to resources  -->
                <controls:AddressControl Address="mydsbvVx5sTpf7h2WD5KxjVKzUAXZtC77i@bitcoin [hardcode]"
                                         HideWarning="False"
                                         Warning="Decentralized addresses created in Testnet are for testing only. Feel free to explore, but don’t use them for important communication." />

                <!--  ToDo: Issue #861 - Move Caption and Note text to resources  -->
                <controls:OptionControl Caption="Secret key"
                                        GapHeight="{StaticResource NormalOptionGapHeight}"
                                        TextNote="Import this key into your Bitcoin wallet to make your address active.">
                    <controls:OptionControl.OptionContent>
                        <muxc:Expander HorizontalAlignment="Stretch"
                                       VerticalAlignment="Top"
                                       HorizontalContentAlignment="Stretch">
                            <muxc:Expander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <!--  ToDo: Issue #861 - Move text to resources  -->
                                    <TextBlock VerticalAlignment="Center"
                                               Text="View your key"
                                               TextTrimming="CharacterEllipsis" />
                                    <!--  ToDo: Issue #861 - Add logic  -->
                                    <!--  ToDo: Issue #861 - Move Content text to resources  -->
                                    <Button Grid.Column="1"
                                            Margin="8,0,0,0"
                                            HorizontalAlignment="Right"
                                            Content="Copy" />
                                </Grid>
                            </muxc:Expander.Header>
                            <!--  ToDo: Issue #861 - Add logic  -->
                            <TextBlock HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       IsTextSelectionEnabled="True"
                                       Text="z2oLcuitoGLzzDX4QbWY9hrBnRziAZoJgqrdgqJKrRqVbDKjrP66 [hardcode]"
                                       TextWrapping="Wrap" />
                        </muxc:Expander>
                    </controls:OptionControl.OptionContent>
                </controls:OptionControl>

                <!--  ToDo: Issue #861 - The layout is broken if there is an error  -->
                <!--  ToDo: Issue #861 - Move Caption text to resources  -->
                <controls:OptionControl Caption="Synchronization interval"
                                        GapHeight="{StaticResource NormalOptionGapHeight}"
                                        HideNote="True">
                    <controls:OptionControl.OptionContent>
                        <StackPanel Orientation="Horizontal">
                            <controls:ErrorControl HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                <controls:ErrorControl.InnerContent>
                                    <TextBox IsSpellCheckEnabled="False" />
                                </controls:ErrorControl.InnerContent>
                            </controls:ErrorControl>
                            <!--  ToDo: Issue #861 - Move text to resources  -->
                            <TextBlock Margin="12,0"
                                       VerticalAlignment="Center"
                                       Text="minutes" />
                        </StackPanel>
                    </controls:OptionControl.OptionContent>
                </controls:OptionControl>

            </StackPanel>
        </controls:AddressSettingsView.SettingsContent>
    </controls:AddressSettingsView>
</local:BitcoinAddressSettingsPageBase>
